{% set shipment = order.shipments.last %}

{# @var \ThreeBRS\SyliusPplParcelshopsPlugin\Model\PplShipmentInterface shipment #}

{% if shipment.pplPickupPointId|default %}
    <address>
        {{ 'threebrs.shop.checkout.complete.pplParcelShop'|trans }}<br>
        <strong>{{ shipment.pplPickupPointName|default }}</strong><br>
        {{ shipment.pplPickupPointAddress|default }}
    </address>
{% else %}
    {% include '@SyliusShop/Common/_address.html.twig' with {'address': order.shippingAddress} %}
{% endif %}
